<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>


  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>mainServlet</servlet-name>
    <servlet-class>servlets.ProductsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>orders</servlet-name>
    <servlet-class>servlets.OrdersServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>detalization</servlet-name>
    <servlet-class>servlets.DetalizationServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ordDetz</servlet-name>
    <servlet-class>servlets.OrderDetalization</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getOrder</servlet-name>
    <servlet-class>servlets.GetOrder</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>getOrder</servlet-name>
    <url-pattern>/getorder</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ordDetz</servlet-name>
    <url-pattern>/orderdetal</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>detalization</servlet-name>
    <url-pattern>/detalization</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>orders</servlet-name>
    <url-pattern>/orders</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>mainServlet</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>



